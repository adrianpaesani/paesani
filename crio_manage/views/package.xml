                    </group>
                    <group string="Attributes">
                        <field name="package_ids" />
                        <field name="type_ids" />
                    </group>
                    <group string="Data">
                        <field name="un_safety_data_sheet" />
                        <field name="un_safety_data_sheet_fn" />
                    </group>
                </group>
            </form>
        </field>
    </record>

