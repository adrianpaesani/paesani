<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- INHERITED FORM -->
        <record id="view_product_form" model="ir.ui.view">
            <field name="name">product.user.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <field name="standard_price" position="before">
                    <group string="Precio de Lista">
                        <field name="lp" placeholder="10000.00" on_change="on_change_price(lp,ds1,ds2,ds3,ds4,ch1,ch2,ch3,ch4)"/>
                    </group>
                    <group string="Descuentos">
                        <field name="ds1" placeholder="10.00" on_change="on_change_price(lp,ds1,ds2,ds3,ds4,ch1,ch2,ch3,ch4)"/>
                        <field name="ds2" placeholder="10.00" on_change="on_change_price(lp,ds1,ds2,ds3,ds4,ch1,ch2,ch3,ch4)"/>
                        <field name="ds3" placeholder="10.00" on_change="on_change_price(lp,ds1,ds2,ds3,ds4,ch1,ch2,ch3,ch4)"/>
                        <field name="ds4" placeholder="10.00" on_change="on_change_price(lp,ds1,ds2,ds3,ds4,ch1,ch2,ch3,ch4)"/>    
                    </group>
                    <group string="Recargos">
                        <field name="ch1" placeholder="10.00" on_change="on_change_price(lp,ds1,ds2,ds3,ds4,ch1,ch2,ch3,ch4)"/>
                        <field name="ch2" placeholder="10.00" on_change="on_change_price(lp,ds1,ds2,ds3,ds4,ch1,ch2,ch3,ch4)"/>
                        <field name="ch3" placeholder="10.00" on_change="on_change_price(lp,ds1,ds2,ds3,ds4,ch1,ch2,ch3,ch4)"/>
                        <field name="ch4" placeholder="10.00" on_change="on_change_price(lp,ds1,ds2,ds3,ds4,ch1,ch2,ch3,ch4)"/>
                    </group>
                </field>
            </field>
        </record>

    </data>
</openerp>
